# # 1단계: 빌드
# FROM node:18-alpine AS builder
# WORKDIR /app
#
# COPY package*.json ./
# RUN npm install
#
# COPY . .
# RUN npm run build
#
# # 2단계: Nginx로 서빙
# FROM nginx:alpine
# COPY nginx.conf /etc/nginx/conf.d/default.conf
# COPY --from=builder /app/build /usr/share/nginx/html
#
# EXPOSE 80
# CMD ["nginx", "-g", "daemon off;"]

FROM node:18-alpine AS builder
WORKDIR /app
COPY . .
RUN npm install && npm run build

FROM nginx:alpine
COPY --from=builder /app/build /usr/share/nginx/html

EXPOSE 80

